@model TaskManager.DTO.ProjectCreateViewModel

@{
    ViewData["Title"] = "Создать проект";
}

<div class="container mt-4">
    <h2>Создать проект</h2>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="Project.ProjectName" class="form-label">Название проекта</label>
            <input asp-for="Project.ProjectName" class="form-control" required />
            <span asp-validation-for="Project.ProjectName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Project.CustomerCompany" class="form-label">Компания-заказчик</label>
            <input asp-for="Project.CustomerCompany" class="form-control" required />
            <span asp-validation-for="Project.CustomerCompany" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Project.ExecutorCompany" class="form-label">Компания-исполнитель</label>
            <input asp-for="Project.ExecutorCompany" class="form-control" required />
            <span asp-validation-for="Project.ExecutorCompany" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Project.StartDate" class="form-label">Дата начала</label>
            <input asp-for="Project.StartDate" type="date" class="form-control" value="@DateTime.Now" required />
            <span asp-validation-for="Project.StartDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Project.EndDate" class="form-label">Дата окончания</label>
            <input asp-for="Project.EndDate" type="date" class="form-control" value="@DateTime.Now" required />
            <span asp-validation-for="Project.EndDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Project.Priority" class="form-label">Приоритет</label>
            <input asp-for="Project.Priority" type="number" class="form-control" required max="3" min="1"/>
            <span asp-validation-for="Project.Priority" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="SelectedManagerId" class="form-label">Руководитель проекта</label>
            <select asp-for="SelectedManagerId" asp-items="Model.Employees" class="form-control" required>
                <option value="">Выберите руководителя</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Создать</button>
    </form>
    <a asp-action="Index" class="btn btn-dark mt-3">Назад</a>
</div>
