@model TaskManager.Models.ProjectTask

@{
    ViewData["Title"] = "Details";
}

<h1>Информация о задаче</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название задачи
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskName)
        </dd>
        <dt class="col-sm-2">
            Комментарий
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
        <dt class="col-sm-2">
            Приоритет
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Priority)
        </dd>
        <dt class="col-sm-2">
            Статус
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            Автор задачи
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.FirstName) @Html.DisplayFor(model => model.Author.LastName)
        </dd>
        <dt class="col-sm-2">
            Исполнитель
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Executor.FirstName) @Html.DisplayFor(model => model.Executor.LastName)
        </dd>
        <dt class="col-sm-2">
            Проект
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.ProjectName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Редактировать</a> |
    <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger">Удалить</a> |
    <a asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-dark">Назад к списку</a>
</div>

